@model IEnumerable<MVCAutoSparkProject.Models.Secondhand>
@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Secondhand</title>
    <meta charset="utf-8">
    <title>Sparks_AT_Your_Service</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!--Stylesheet-->
    <link href="~/Content/secondhand.css" rel="stylesheet">

    <!-- fontawesome-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/dfd97a1bf0.js" crossorigin="anonymous"></script>

    <style>
        body {
            background-image: url("~/Images/bg1.jpeg");
            background-color: black;
            background-size: cover;
            background-repeat: no-repeat;
            overflow-x: hidden;
        }

        .card-img-top {
            width: 100%;
            height: 15vw;
            object-fit: cover;
        }

        .jumbotron .image {
            background-repeat: no-repeat;
            height: 400px;
            padding-left: 160px;
            background-size: cover;
            color: black;
        }
    </style>
</head>
<body>
    @Html.Partial("_NavbarPartial")

    <!--Backgroung image-->
    <div class="container text-warning">

        <div class="jumbotron">
            <p><h2 style="color:blueviolet ; text-align:center">Your Own Car!!</h2></p>
            <img class="image" src="~/Images/bgSecondhand.jpeg" />



        </div>
    </div>

    <div class="card-deck">

        @foreach (var row in Model)
        {
<div class="card">
    <img class="card-img-top" src="@Url.Content(row.Image)" alt="Card image cap">
    <div class="card-block">
        <h4 class="card-title">Name :@row.Name</h4>

        @Html.ActionLink("Book a Slot", "Details", "Home", new { id = row.Id }, new { @class = "btn btn-primary btn-md" })
    </div>
</div>            }
    </div>

</body>

</html>

