@model MVCAutoSparkProject.Models.Secondhand
@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detail of the car</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link href="https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css"
          rel="stylesheet">
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
</head>
<body>
    <div>
        <img class="image" src="@Url.Content(Model.Image)" alt="Card image cap">
        <h1>Car Name : @Model.Name</h1>
        <h3>Price of car : @Model.Price</h3>
        <h3>Year of purchase : @Model.Year</h3>
        <h3>Book a Date to visit: <input type="text" id="datepicker-13"></h3>
        @Html.ActionLink("Confirm Appointment", "ConfirmAppointment", "Home", new { @class = "btn btn-primary btn-md" })
    </div>

    <script>$(function () {
            $("#datepicker-13").datepicker();
            $("#datepicker-13").datepicker("show");
        });</script>
</body>
</html>